@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>
@{
}

<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Region" asp-action="Add">Create Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>CODE</th>
            <th>NAME</th>
            <th>EDIT</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var Region in Model)
        {
            <tr>
                <td>@Region.Id</td>
                <td>@Region.Code</td>
                <td>@Region.Name</td>
                <td>
                    <a asp-controller="Region" asp-action="Edit" asp-route-id="@Region.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
